<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="org.sopt.yata.yata.ui.common.SigninActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/cancel"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="아이디로 로그인하기"
        android:textColor="#000000"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:background="@null"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:hint="ID"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:background="#000000" />

    <EditText
        android:id="@+id/edit_passwd"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:background="@null"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:hint="Password"
        android:password="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:background="#000000" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_login_loginpage"
        android:text="로그인"
        android:textSize="15sp" />

    <Button
        android:id="@+id/forget_button"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:text="forget your ID / PASSWORD ?"
        android:textColor="#000000"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="53dp"
            android:text="아직 회원이 아니신가요 ?"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="53dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:text="회원가입하기"
                android:textColor="#0B5EC4"
                android:textSize="16sp" />

            <View
                android:layout_width="94dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="#0B5EC4" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>