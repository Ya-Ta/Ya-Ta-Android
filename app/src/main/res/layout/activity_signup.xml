<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cancel"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:text="회원가입 하기"
        android:id="@+id/textView1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="20dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/signup_img"
            android:src="@drawable/profile_photocircle"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/signup_img"
            android:layout_marginLeft="-30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/profilechange"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/img_name"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/id_card" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/img_name"
            android:background="@null"
            android:hint="Username"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <View
            android:id="@+id/line1"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_below="@id/img_name"
            android:layout_marginTop="6dp"
            android:background="#000000" />

        <View
            android:id="@+id/line2"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_below="@id/img_name"
            android:layout_marginTop="10dp"
            android:background="#000000" />

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/name_edit"
            android:src="@drawable/avatar" />

        <EditText
            android:id="@+id/id_edit"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/img_id"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Id"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_below="@id/img_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:background="#000000" />

        <View

            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_id"
            android:background="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/img_pw"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="        Password"
            android:password="true"
            android:backgroundTint="#000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/pw_edit"
            android:layout_toEndOf="@id/img_pw"/>


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_pw"
            android:background="#000000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/img_pwre"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="    Confirm Password"
            android:password="true"
            android:backgroundTint="#000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/pwre_edit"
            android:layout_toEndOf="@id/img_pwre"/>


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_pwre"
            android:background="#000000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="      Phone number"
            android:password="true"
            android:backgroundTint="#000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/phone_edit"
            android:layout_toEndOf="@id/img_phone"/>


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_phone"
            android:background="#000000" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/img_mail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="     Email Address"
            android:password="true"
            android:backgroundTint="#000000"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:background="@null"
            android:id="@+id/mail_edit"
            android:layout_toEndOf="@id/img_mail"/>


        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_mail"
            android:background="#000000" />

    </RelativeLayout>
    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="회원가입"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_round_gradation"
        android:layout_marginTop="20dp"/>


    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="혹시 이미 회원이신가요?"
            android:id="@+id/text1"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/text1"
            android:layout_centerVertical="true"
            android:text="로그인 하기"
            android:textColor="#3189d0"
            android:background="@color/colorBackground"
            />
    </RelativeLayout>
</LinearLayout>