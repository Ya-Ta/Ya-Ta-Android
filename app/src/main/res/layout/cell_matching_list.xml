<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="8dp"
    android:layout_marginBottom="22dp">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/yata_insurance"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:text="차주"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:text="야타보험 가입자"
                android:layout_marginRight="95dp"
                android:textColor="#0B5EC4"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/text_created_time"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textColor="#000000"
                android:textSize="7sp"
                android:layout_marginTop="10dp"
                android:text="작성 시간"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출발지:  "
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/text_sloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                tools:text="출발지"
                android:textStyle="bold"
                android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착지:  "
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/text_eloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="도착지:"
                    android:textColor="#000" />
                </LinearLayout>

            <TextView
                android:id="@+id/text_matching_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="6dp"
                tools:text="00:00 출발예정"
                android:textColor="#000"/>


        <TextView
            android:id="@+id/text_matching_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="메세지메시지메시지메시지메시지"
            android:layout_marginBottom="3dp"
            android:textColor="#000" />

        <View
            android:id="@+id/standard"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#80000000"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

</LinearLayout>
