<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal"
            >
            <!--렐러티브로 출발, 도착지 설정 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/search_border_rounded"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <!--이미지뷰2, 에디트텍스트2, 뷰(출발 도착 사이 선) -->
                <View
                    android:id="@+id/standard"
                    android:layout_width="250dp"
                    android:layout_height="1dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#000000" />

                <View
                    android:id="@+id/standard2"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/leftImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/location_search" />

                <Spinner
                    android:id="@+id/start_sido"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/standard"
                    android:layout_toEndOf="@id/leftImg"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="시/도"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:popupBackground="#fff"/>

                <Spinner
                    android:id="@+id/start_sigungu"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/standard"
                    android:layout_toRightOf="@id/start_sido"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="시/군/구"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:popupBackground="#fff"/>

                <Spinner
                    android:id="@+id/end_sido"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/standard"
                    android:layout_toEndOf="@id/leftImg"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="시/도"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:popupBackground="#fff"/>

                <Spinner
                    android:id="@+id/end_sigungu"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/standard"
                    android:layout_toRightOf="@id/start_sido"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="시/군/구"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:popupBackground="#fff"/>

                <Button
                    android:id="@+id/switch_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/change"
                    android:gravity="right" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/search_map"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>


            <ListView
                android:id="@+id/search_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="50dp"
                />


        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/button_search"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></Button>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/belowbox"
        android:layout_marginBottom="-12dp"
        android:scaleX="1.5"/>
    <ImageView
        android:layout_width="123dp"
        android:layout_height="19dp"
        android:src="@drawable/belowtext_justride"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/img_listmap"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/list_select"
            />

        <Button
            android:id="@+id/search_list_btn"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_marginLeft="7dp"
            android:background="@null"
            />

        <Button
            android:id="@+id/search_map_btn"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/search_list_btn"
            android:background="@null"
            />
    </RelativeLayout>
</RelativeLayout>